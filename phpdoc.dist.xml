<?xml version="1.0" encoding="UTF-8" ?>
<phpdocumentor>
    <parser>
        <default-package-name>Abricos</default-package-name>
        <target>docs/php</target>
        <extensions>
            <extension>php</extension>
        </extensions>
        <markers>
            <item>TODO</item>
        </markers>
    </parser>
    <transformer>
        <target>docs/php</target>
    </transformer>
    <transformations>
        <template name="clean" />
    </transformations>
    <logging>
        <level>warn</level>
        <paths>
            <default>{APP_ROOT}/logs/phpdoc-{DATE}.log</default>
            <errors>{APP_ROOT}/logs/phpdoc-DATE}.errors.log</errors>
        </paths>
    </logging>
    <files>
        <directory>./abricos.src</directory>
        <ignore>./abricos.src/install</ignore>
        <ignore>./abricos.src/vendor</ignore>
        <ignore>./abricos.src/templates</ignore>
        <ignore>*node_modules*</ignore>
        <ignore>*bower_components*</ignore>
    </files>
</phpdocumentor>